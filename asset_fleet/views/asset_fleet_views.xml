                <field name="code" />
                <field name="owner_id" />
                <field name="owner_name" />
                <field name="plate_type" />
                <field name="mvpi_state" />
                <field name="insurance_state" />
                <field name="account_analytic_id" />
            </field>
            <field name="acquisition_date" position="before">
